<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".controller.PopularMovieDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/movie_poster_thumbnail_image_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:scaleType="fitStart"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight=".7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/original_title_label_text_view"
                        android:background="@color/colorLightGreen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight=".3"
                        android:padding="4dp"
                        android:text="@string/original_title_label"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/original_title_value_text_view"
                        android:background="@color/colorLightBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight=".7"
                        android:padding="4dp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/plot_synopsis_label_text_view"
                        android:background="@color/colorLightGreen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight=".3"
                        android:padding="4dp"
                        android:text="@string/plot_synopsis_label"
                        android:textAlignment="center"/>


                    <TextView
                        android:id="@+id/plot_synopsis_value_text_view"
                        android:background="@color/colorLightBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight=".7"
                        android:padding="4dp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_rating_label_text_view"
                        android:background="@color/colorLightGreen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight=".3"
                        android:padding="4dp"
                        android:text="@string/user_rating_label"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/user_rating_value_text_view"
                        android:background="@color/colorLightBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight=".7"
                        android:padding="4dp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/release_date_label_text_view"
                        android:background="@color/colorLightGreen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight=".3"
                        android:padding="4dp"
                        android:text="@string/release_date_label"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/release_date_value_text_view"
                        android:background="@color/colorLightBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight=".7"
                        android:padding="4dp"
                        android:textAlignment="center"/>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
